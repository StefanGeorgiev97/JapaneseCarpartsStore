@model JapaneseCarpartsStore.Models.Part

@{
    ViewData["Title"] = "Delete Part";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Confirmation</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Are you sure you want to delete this part?</h5>

                    <dl class="row">
                        <dt class="col-sm-4">Part Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8 text-success">$@Model.Price</dd>

                        <dt class="col-sm-4">Vehicle</dt>
                        <dd class="col-sm-8">
                            @if (Model.VehicleModel != null)
                            {
                                <span>@Model.VehicleModel.Brand?.Name @Model.VehicleModel.Name</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete" class="text-center mt-4">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>